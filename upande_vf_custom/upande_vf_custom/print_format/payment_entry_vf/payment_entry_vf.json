 "doctype": "Print Format",
 "font_size": 14,
 "html": "<link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css\" rel=\"stylesheet\" integrity=\"sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH\" crossorigin=\"anonymous\">\n<div class=\"\">\n  <div class=\"row justify-content-between\">\n    <div class=\"col-auto mr-auto\">\n    <div>\n      {%- if doc.meta.is_submittable and doc.docstatus==0-%}\n      <div class=\"alert alert-info text-center\">\n          <h6 style=\"margin: 0px;\">{{ _(\"PROFORMA\") }}</h6>\n      </div>\n      {%- endif -%}\n      \n      {%- if doc.meta.is_submittable and doc.docstatus==2-%}\n      <div class=\"alert alert-danger text-center\">\n          <h6 style=\"margin: 0px;\">{{ _(\"CANCELLED\") }}</h6>\n      </div>\n      {%- endif -%}\n      \n      {%- macro add_header(page_num, max_pages, doc, letter_head, no_letterhead) -%}\n          {% if letter_head and not no_letterhead %}\n          <div class=\"letter-head\">{{ letter_head }}</div>\n          {% endif %}\n          \n          {% if max_pages > 1 %}\n          <p class=\"text-right\">{{ _(\"Page #{0} of {1}\").format(page_num, max_pages) }}</p>\n          {% endif %}\n      {%- endmacro -%}\n  \n      {{ add_header(0,1,doc,letter_head, no_letterhead) }}\n    </div>\n\n    <br>\n\n  </div>\n  <div class=\"col-auto\">\n      <h6>PAYMENT ENTRY</h6>\n      <p>Payment Date<br>{{ doc.get_formatted(\"posting_date\") or '' }}<br><br>Reference<br>{{ doc.name }}</p>\n  </div>\n  </div>\n</div>\n\n<div>\n    \n    <hr class=\"w-100 my-2\"> <!-- Horizontal line with margin -->\n    <div>\n        <table class=\"table table-bordered\">\n        \t<tbody>\n        \t\t<tr>\n        \t\t\t<th>Contact</th>\n        \t\t\t<th class=\"text-align: left;\">Inv #</th>\n        \t\t\t<th class=\"text-align: right;\">Date</th>\n        \t\t\t<th class=\"text-align: right;\">Due Date</th>\n        \t\t\t<th class=\"text-align: right;\">Total</th>\n        \t\t\t<th class=\"text-align: right;\">Payment Amount</th>\n        \t\t\t\n        \t\t</tr>\n        \t\t{%- for row in doc.references -%}\n        \t\t<tr>\n        \t\t\t<td style=\"width: 25%; text-align: left;\">{{ doc.party_name }}</td>\n        \t\t\t<td style=\"width: 15%; text-align: left;\">{{ row.reference_name }}</td>\n        \t\t\t<td style=\"width: 10%; text-align: left;\">{{ doc.posting_date }}</td>\n        \t\t\t<td style=\"width: 10%; text-align: left;\">{{ row.due_date }}</td>\n        \t\t\t<td style=\"width: 10%; text-align: left;\">{{ row.get_formatted(\"total_amount\", doc) }}</td>\n        \t\t\t<td style=\"width: 10%; text-align: left;\">{{ row.get_formatted(\"allocated_amount\", doc) }}</td>\n        \n        \t\t</tr>\n        \t\t{%- endfor -%}\n        \t</tbody>\n        </table>\n        <div class=\"container-fluid\">\n            <div class=\"row\">\n                <div class=\"col-md-6\"></div> <!-- Left half blank -->\n                <div class=\"col-md-6 d-flex flex-column align-items-start p-4\">\n                    <hr class=\"w-100 my-2\"> <!-- Horizontal line with margin -->\n                    \n                    <p class=\"d-flex justify-content-between w-100\">\n                        <span>Total</span>\n                        <span>{{ doc.get_formatted(\"paid_amount\", doc) }}</span>\n                    </p>\n                    \n                    <hr class=\"w-100 my-2\"> <!-- Horizontal line with margin -->\n                </div>\n            </div>\n        </div>\n    </div>\n</div>\n\n<table class=\"table table-bordered\">\n\t<tbody>\n\t\t<tr>\n\t\t    <th class=\"text-align: right;\">Purchase Invoice Ref</th>\n\t\t    <th class=\"text-align: right;\">Purchase Receipt Ref</th>\n\t\t    <th class=\"text-align: right;\">Purchase Order Ref</th>\n\t\t</tr>\n\t\t{%- for row in doc.references -%}\n\t\t{% if row.reference_doctype == \"Purchase Invoice\" %}\n\t\t\n\t\t\n\t\t{% set refs = frappe.db.get_all(\"Purchase Invoice Item\", filters={\"parent\": row.reference_name}, fields=[\"purchase_order\", \"purchase_receipt\"]) %}\n\t\t\n\t\t{% if refs %}\n\t\t{% for ref in refs %}\n\t\t<tr>\n\t\t\t<td style=\"width: 10%; text-align: left;\">{{ row.reference_name }}</td>\n\t\t\t<td style=\"width: 10%; text-align: left;\">{{ ref.purchase_receipt }}</td>\n\t\t\t<td style=\"width: 10%; text-align: left;\">{{ ref.purchase_order }}</td>\n\t\t</tr>\n\t\t{%- endfor -%}\n\t\t{% endif %}\n\t\t\n\t\t{% endif %}\n\t\t{%- endfor -%}\n\t</tbody>\n</table>\n",
